{
	"name": "notion-wp",
	"version": "0.1.0",
	"description": "Bi-directional sync between Notion and WordPress",
	"author": "The VGER Group",
	"license": "GPL-2.0-or-later",
	"private": true,
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	},
	"scripts": {
		"build": "npm-run-all build:*",
		"build:dashboard": "esbuild src/sync-dashboard.jsx --bundle --format=iife --outfile=plugin/assets/build/sync-dashboard.js --minify --jsx=automatic --jsx-import-source=preact",
		"build:blocks": "wp-scripts build plugin/blocks/database-view/src/index.js --output-path=plugin/blocks/database-view/build",
		"start": "npm-run-all --parallel start:*",
		"start:dashboard": "esbuild src/sync-dashboard.jsx --bundle --format=iife --outfile=plugin/assets/build/sync-dashboard.js --watch --jsx=automatic --jsx-import-source=preact",
		"start:blocks": "wp-scripts start plugin/blocks/database-view/src/index.js --output-path=plugin/blocks/database-view/build",
		"lint": "npm-run-all --parallel lint:*",
		"lint:js": "eslint '{plugin,src}/**/*.{js,jsx,ts,tsx}' --max-warnings=0",
		"lint:js:fix": "eslint '{plugin,src}/**/*.{js,jsx,ts,tsx}' --fix",
		"lint:css": "stylelint 'plugin/**/*.{css,scss,sass}'",
		"lint:css:fix": "stylelint 'plugin/**/*.{css,scss,sass}' --fix",
		"lint:all": "npm-run-all lint:js lint:css format:check",
		"lint:fix": "npm-run-all lint:js:fix lint:css:fix format",
		"format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,sass,yml,yaml}'",
		"format:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,css,scss,sass,yml,yaml}'",
		"prepare": "husky install",
		"precommit": "lint-staged",
		"postinstall": "echo '\nâœ“ npm dependencies installed successfully\n' && echo 'Run npm run lint to check code quality\n'"
	},
	"devDependencies": {
		"@wordpress/block-editor": "^15.7.0",
		"@wordpress/blocks": "^14.8.0",
		"@wordpress/components": "^29.8.0",
		"@wordpress/data": "^10.8.0",
		"@wordpress/eslint-plugin": "^17.7.0",
		"@wordpress/i18n": "^5.8.0",
		"@wordpress/icons": "^10.8.0",
		"@wordpress/prettier-config": "^3.7.0",
		"@wordpress/scripts": "^30.27.0",
		"@wordpress/server-side-render": "^5.8.0",
		"esbuild": "^0.25.11",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsdoc": "^48.0.2",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"htm": "^3.1.1",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.0",
		"npm-run-all": "^4.1.5",
		"preact": "^10.27.2",
		"prettier": "^3.2.4",
		"stylelint": "^16.2.0",
		"stylelint-config-standard": "^36.0.0",
		"stylelint-config-wordpress": "^17.0.0",
		"stylelint-order": "^6.0.4",
		"stylelint-scss": "^6.1.0"
	},
	"lint-staged": {
		"*.php": [
			"composer lint:fix:quiet",
			"git add"
		],
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write",
			"git add"
		],
		"*.{css,scss,sass}": [
			"stylelint --fix",
			"prettier --write",
			"git add"
		],
		"*.{json,yml,yaml}": [
			"prettier --write",
			"git add"
		]
	},
	"prettier": "@wordpress/prettier-config"
}
