# Example .env configuration for main worktree
# Copy this to .env and customize as needed

# Project isolation (REQUIRED - must be unique per worktree)
COMPOSE_PROJECT_NAME=notionwp_main
WP_SITE_HOST=main.localtest.me

# Database configuration
DB_NAME=wp_main
WP_TABLE_PREFIX=wp_
DB_USER=wp
DB_PASSWORD=wp
DB_ROOT_PASSWORD=root

# Database Volume Strategy
# Shared volume (default) - persists Notion tokens and settings across branches
DB_VOLUME_NAME=notionwp_shared_db
# Isolated volume (uncomment for testing clean installs)
# DB_VOLUME_NAME=${COMPOSE_PROJECT_NAME}_db_data

# External database port (optional)
# Uncomment to access database via external clients like TablePlus
# DB_PORT=3306

# WordPress configuration
WP_VERSION=php8.3-apache
WP_CLI_VERSION=php8.3

# Debug settings
WP_DEBUG=1
WP_DEBUG_LOG=1
WP_DEBUG_DISPLAY=0

# WordPress installation
WP_TITLE="Notion Sync Dev"
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=admin
WP_ADMIN_EMAIL=admin@example.com
