{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "notion-wp/database-view",
	"title": "Notion Database View",
	"category": "embed",
	"icon": "database",
	"description": "Display a Notion database with interactive filtering and sorting",
	"keywords": ["notion", "database", "table", "data"],
	"version": "1.0.0",
	"textdomain": "notion-wp",
	"attributes": {
		"databaseId": {
			"type": "number",
			"default": 0
		},
		"viewType": {
			"type": "string",
			"default": "table",
			"enum": ["table", "board", "gallery", "timeline", "calendar"]
		},
		"showFilters": {
			"type": "boolean",
			"default": true
		},
		"showExport": {
			"type": "boolean",
			"default": true
		}
	},
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/editor.css",
	"style": "file:./build/style.css"
}
